# ===============================
# Database Configuration
# ===============================

# Database host (localhost for local, postgres for Docker)
DB_HOST=localhost

# PostgreSQL port
DB_PORT=5432

# Database name
DB_NAME=ecommerce_db

# Database username
DB_USER=admin

# Database password (DO NOT commit real password)
DB_PASSWORD=change_me

# ===============================
# Pipeline Environment
# ===============================

# Environment type: development | testing | production
ENV=development

# Logging level: DEBUG | INFO | WARNING | ERROR
LOG_LEVEL=INFO

# ===============================
# Scheduler Configuration
# ===============================

# Daily pipeline execution time (24-hour format HH:MM)
PIPELINE_RUN_TIME=02:00

